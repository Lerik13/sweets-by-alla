---
import { Image } from "astro:assets";
import LoginLayout from '../layouts/LoginLayout.astro';
import LoginForm from '../components/admin/LoginForm';
---

<LoginLayout>
	<div class="w-fit container0 mx-auto flex flex-col md:flex-row gap-10 p-2 sm:p-14 bg-white rounded-3xl shadow-xl">
		<div class="w-full md:w-1/3 my-auto flex justify-center border-0 border-red-500">
			<a href="/" class="w-[180px] h-[180px] border border-navColor shadow-md flex justify-center rounded-full p-2" aria-label="Go to main page">
				<Image src="/logo2.svg" alt="Logo" width={180} height={50} />
			</a>
		</div>
		<div class="w-full md:w-2/3 h-fit border-0 border-green-500 flex flex-col space-y-5 text-center px-5">
			<h1 class="text-5xl md:text-6xl font-serif text-brightRed">
				Login
			</h1>
			<p>This form is only for Admin and Editor users</p>
	
			<LoginForm client:load />
		</div>
	</div>
</LoginLayout>



