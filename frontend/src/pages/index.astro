---
export const prerender = true;

import { Icon } from 'astro-icon';
import { Image } from "astro:assets";
import contactData from '../data/contactData';
import Layout from '../layouts/Layout.astro';
import Button from '../components/Button.astro';
import CarouselHero from '../components/CarouselHero.astro';
import TabCatalog from '../components/TabCatalog.astro';
import Reviews from '../components/Reviews.astro';

import featureImage_1 from "../assets/images/feature1.jpg";
import featureImage_2 from "../assets/images/feature2.jpg";
import featureImage_3 from "../assets/images/feature3.jpg";
import aboutImage from "../assets/images/about1.jpg";
import howToOrderImage from "../assets/images/how-to-order.jpg";
---

<Layout>
	<!-- Hero Section -->
	<section id="home" data-anchor="home">
		<div class="container mx-auto md:h-[40rem] flex flex-col-reverse md:flex-row items-center">
			<div class="flex flex-col items-center md:items-start justify-between w-full md:w-1/2 md:h-[40rem] md:h-full space-y-12 md:space-y-0 p-2 pt-0 border-0 border-green-500">
				<div class="mt-10 md:mt-20 flex flex-col space-y-7 items-center md:items-start">
					<h1 class="text-5xl md:text-6xl font-serif leading-[3rem] md:leading-[4rem]">
						Delicious cakes &amp;<br>
						desserts for you!
					</h1>
					<p class="text-base leading-[1.5rem]">
						A large selection of delecious cakes, desserts and pastries.<br>
						Suitable for both holidays and regular days. Delicious!
					</p>
					<div class="flex">
						<Button text="Order now" href="/#how-to-order" />
					</div>
				</div>
				<div class="flex gap-x-4">
					<a href=`${contactData.facebook}` target="blank" class="flex justify-center items-center border hover:border-2 border-gray-400 hover:border-brightRed w-[40px] h-[40px] rounded-full">
						<Icon name="jam:facebook" width="26px" class="" />
					</a>
					<a href=`${contactData.instagram}` target="blank" class="flex justify-center items-center border hover:border-2 border-gray-400 hover:border-brightRed w-[40px] h-[40px] rounded-full">
						<Icon name="jam:instagram" width="26px" class="" />
					</a>
					<a href=`tel:${contactData.phoneValue}` class="flex justify-center items-center border hover:border-2 border-gray-400 hover:border-brightRed w-[40px] h-[40px] rounded-full">
						<Icon name="ri:phone-fill" width="26px" class="" />
					</a>
				</div>
			</div>
	
			<div class="w-full md:w-1/2 h-[30rem] md:h-full overflow-hidden">
				<CarouselHero />
			</div>
		</div>
	</section>

	<!-- Catalog -->
	<section id="catalog" data-anchor="catalog">
		<div class="container flex flex-col space-y-10 md:space-y-12 mx-auto mt-16 md:mt-20">
			<h2 class="font-serif text-5xl md:text-6xl pr-2 flex justify-center">
				Catalog
			</h2>
			<div 
				role="tablist"
				aria-label="tabs"
				class="w-max mx-auto grid grid-cols-2 md:grid-cols-4 gap-y-3 col-auto items-center px-[3px] overflow-hidden transition md:text-base font-semibold"
			>
				<button
					role="tab"
					aria-selected="true"
					aria-controls="panel-cake"
					id="tab-cake"
					tabindex="0"
					class="tab h-10 px-6 border-b border-brightRed text-brightRed"
				>
					Popular cakes
				</button>
				<button
					role="tab"
					aria-selected="false"
					aria-controls="panel-cupcake"
					id="tab-cupcake"
					tabindex="-1"
					class="tab h-10 px-6 border-b border-veryLightGray"
				>
					Cupcakes
				</button>
				<button
					role="tab"
					aria-selected="false"
					aria-controls="panel-cake-pop"
					id="tab-cake-pop"
					tabindex="-1"
					class="tab h-10 px-6 border-b border-veryLightGray"
				>
					Cake pops
				</button>
				<button
					role="tab"
					aria-selected="false"
					aria-controls="panel-gluten-free"
					id="tab-gluten-free"
					tabindex="-1"
					class="tab h-10 px-6 border-b border-veryLightGray"
				>
					Gluten-free desserts
				</button>
			</div>
			<!-- Tab Content -->
			<div class="mt-6 relative">
				<TabCatalog
					id="panel-cake"
					category="cake"
					href="/"
					active={true}
				/>
				<TabCatalog
					id="panel-cupcake"
					category="cupcake"
					href="/"
				/>
				<TabCatalog
					id="panel-cake-pop"
					category="cake pop"
					href="/"
				/>
				<TabCatalog 
					id="panel-gluten-free"
					category="gluten-free dessert"
					href="/"
				/>
			</div>
		</div>
	</section>

	<!-- Features Section -->
	<section id="features" data-anchor="features">
		<div class="container flex flex-col space-y-10 md:space-y-12 px-6 mx-auto mt-16 md:mt-20">
			<h2 class="font-serif text-5xl md:text-6xl pr-2 flex justify-center">
				Our advantages
			</h2>
			<div class="flex flex-col md:flex-row gap-8 md:gap-4 lg:gap-[4rem] xl:gap-[6rem] md:items-end justify-center">
				<div class="flex flex-row md:flex-col space-x-3 space-y-3 items-center md:w-[14rem] border-0 border-red-300">
					<div class="border-0 border-green-300 w-[10rem] md:w-[13rem]">
						<Image src={featureImage_1} alt="advantage 1" format="avif" class="rounded-full w-full" />
					</div>
					<div class="flex flex-col gap-2 md:items-center">
						<h6 class="font-semibold text-lg">High quality</h6>
						<p class="md:px-6 md:text-center">
							Handmade cake & natural ingredients
						</p>
					</div>
				</div>
				<div class="flex flex-row md:flex-col space-x-3 space-y-3 items-center md:w-[17rem] border-0 border-red-300">
					<div class="border-0 border-green-300 w-[10rem] md:w-[16rem]">
						<Image src={featureImage_2} alt="advantage 2" format="avif" class="rounded-full w-full" />
					</div>
					<div class="flex flex-col gap-2 md:items-center">
						<h6 class="font-semibold text-lg">Beautiful decor</h6>
						<p class="md:px-6 md:text-center">
							Variety theme decoration for special occasion
						</p>
					</div>
				</div>
				<div class="flex flex-row md:flex-col space-x-3 space-y-3 items-center md:w-[14rem] border-0 border-red-300">
					<div class="border-0 border-green-300 w-[10rem] md:w-[13rem]">
						<Image src={featureImage_3} alt="advantage 3" format="avif" class="rounded-full w-full" />
					</div>
					<div class="flex flex-col gap-2 md:items-center">
						<h6 class="font-semibold text-lg">Fast delivery</h6>
						<p class="md:px-6 md:text-center">
							Delivery in Edmonton and surrounding area
						</p>
					</div>
				</div>
		</div>
	</section>

	<!-- About Section -->
	<section id="about" data-anchor="about">
		<div class="container flex flex-col space-y-10 md:space-y-12 px-6 mx-auto mt-16 md:mt-20">
			<h2 class="font-serif text-5xl md:text-6xl pr-2 flex justify-center">
				About Chef
			</h2>
			<div class="flex justify-center">
				<div class="flex lg:w-9/12 flex-col-reverse md:flex-row gap-5 md:h-[20rem] xl:h-[25rem] ">
					<p class="flex items-center md:w-2/3 leading-[1.6rem] p-4 text-base text-justify">
						Hello everyone, my name is Alla Tkachenko and as you can see, I love to Bake! I live in Edmonton West end, Alberta Canada.
						I adore baking organic and natural sweets from good ingredients. In my kitchen I donâ€™t have shoo taring and margarine. By keeping these things out it makes my costumers happier and the cakes better. I have many years of experience on a Canadian pastry kitchen. I usually make cakes and sweets such as: cookies, macaroons, and cake pops. About how I decorate sweets, it all depends on the customer and what they want to see. I am looking forward to give you lots of memboribal sweets on your table!
					</p>
					<div class="md:w-1/3 overflow-hidden md:h-full">
						<Image src={aboutImage} alt="Alla Tkachenko chef" format="avif" class="object-cover w-full h-full" />
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Reviews Section -->
	<section id="reviews" data-anchor="reviews">
		<div class="container flex flex-col mx-auto mt-16 md:mt-20">
			<h2 class="font-serif text-5xl md:text-6xl pr-2 flex justify-center">
				Reviews
			</h2>
			<Reviews />
		</div>
	</section>

	<!-- Form: How-to-Order Section -->
	<section id="how-to-order" data-anchor="how-to-order">
		<div class="container flex mx-auto mt-16 md:mt-20">
			<div class="hidden md:block md:w-2/5 lg:w-1/2 xl:w-3/5 h-[30rem] overflow-hidden">
				<Image src={howToOrderImage} alt="how to order" format="avif" class="object-cover w-full h-full" />
			</div>
			<div class="w-full md:w-3/5 lg:w-1/2 xl:w-2/5 flex">
				<div class="flex flex-col justify-center h-full w-full px-[2rem] md:px-[2.5rem] lg:px-[3.5rem] space-y-5">
					<h2 class="font-serif text-5xl md:text-6xl text-center md:text-left pb-4">
						How to order
					</h2>
					<p>
						Please leave your contact information and we will get back to you as soon as possible
					</p>
					<form name="contact" id="form-contact" method="POST" data-netlify="true" class="flex flex-col w-full space-y-5">
						<input class="px-5 py-3.5 w-full py-5 bg-veryLightGray rounded-full " id="name" name="name" type="text" placeholder="Name" required>
						<input class="px-5 py-3.5 w-full py-5 bg-veryLightGray rounded-full " id="phone" name="phone" type="tel" placeholder="Phone" required>
						<div class="flex justify-center md:justify-start mt-8">
							<Button isSubmit={true} />
						</div>
					</form>
				</div>
			</div>
			
		</div>
	</section>

</Layout>

<script>
	import "../js/tabs.js";
</script>