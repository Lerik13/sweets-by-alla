---
import { Image } from "astro:assets";
import { Icon } from 'astro-icon';
import contactData from '../data/contactData';
---

<footer id="contacts" data-anchor="contacts" class="bg-navColor flex mt-16 md:mt-20">
	<div class="container flex mx-auto pt-[1rem] pb-[4rem]">
		<div class="flex flex-col md:flex-row justify-between gap-8 md:gap-1 w-full">
			<div class="md:w-1/3 flex justify-center md:justify-start">
				<div class="flex flex-col space-y-6 items-center ">
					<a href="/" class="flex">
						<Image src="/logo2.svg" alt="Logo" width={180} height={50} />
					</a>
					<div class="flex gap-x-4">
						<a href=`${contactData.facebook}` target="blank" class="flex justify-center items-center border hover:border-2 border-veryLightGray hover:border-brightRed w-[40px] h-[40px] rounded-full">
							<Icon name="jam:facebook" width="26px" class="" />
						</a>
						<a href=`${contactData.instagram}` target="blank" class="flex justify-center items-center border hover:border-2 border-veryLightGray hover:border-brightRed w-[40px] h-[40px] rounded-full">
							<Icon name="jam:instagram" width="26px" class="" />
						</a>
						<a href=`tel:${contactData.phoneValue}` class="flex justify-center items-center border hover:border-2 border-veryLightGray hover:border-brightRed w-[40px] h-[40px] rounded-full">
							<Icon name="ri:phone-fill" width="26px" class="" />
						</a>
					</div>
				</div>
			</div>
			<div class="hidden md:w-1/3 md:flex flex-col space-y-3 md:space-y-10 justify-end pl-4">
				<h4 class="text-lg font-semibold">
					Menu
				</h4>
				<div class="flex gap-10">
					<div class="flex flex-col gap-2">
						<a href="/#home" class="hover:text-brightRed">Home</a>
						<a href="/#catalog" class="hover:text-brightRed">Catalog</a>
					</div>
					<div class="flex flex-col gap-2">
						<a href="/#reviews" class="hover:text-brightRed">Reviews</a>
						<a href="/#how-to-order" class="hover:text-brightRed">How to order</a>
					</div>
				</div>
			</div>
			<div class="md:w-1/3 flex flex-col space-y-3 md:space-y-10 justify-end pl-4">
				<h4 class="text-lg font-semibold">
					Contacts
				</h4>
				<div class="flex flex-col gap-y-2">
					<a href=`tel:${contactData.phoneValue}` class="hover:text-brightRed">
						{contactData.phoneText}
					</a>
					<a href=`mailto:${contactData.email}` class="hover:text-brightRed">
						{contactData.email}
					</a>
				</div>
			</div>
		</div>
	</div>
</footer>